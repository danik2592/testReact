{
  "extends": [
    "airbnb"
    //    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "jsx-quotes": [ 2, "prefer-single" ],
//    "react/jsx-curly-spacing": [ 2, "always" ],
    "react/prefer-stateless-function": [0],
    "no-console": [ 0 ]
  },
  //  "plugins": [
  //    "flowtype"
  //  ],
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "globals": {
    "yii": true
  }
}